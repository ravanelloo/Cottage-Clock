{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "strict": true,
    "types": ["vite/client"],
    "ignoreDeprecations": "6.0"
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
